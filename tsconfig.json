{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "target": "es6",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
}